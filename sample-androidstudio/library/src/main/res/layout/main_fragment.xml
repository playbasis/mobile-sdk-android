<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCCCCC"
    android:gravity="center">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login via Facebook"
        android:id="@+id/facebook"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/social_fb"
        android:layout_margin="8dp"
        android:textColor="#ffffffff" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login via Twitter"
        android:id="@+id/twitter"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/social_tw"
        android:layout_margin="8dp"
        android:textColor="#ffffffff"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login via LinkedIn"
        android:id="@+id/linkedin"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/social_li"
        android:radius="4.0dip"
        android:layout_margin="8dp"
        android:textColor="#ffffffff"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login via GooglePlus"
        android:radius="4.0dip"
        android:id="@+id/googleplus"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/social_go"
        android:layout_margin="8dp"
        android:textColor="#ffffffff"/>
</LinearLayout>